<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/middle_blue"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="Fuel Weight"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ractangle_square"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:text="Fuel"/>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/FuelWeightEdt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="연료량을 입력하세요"
                    android:gravity="end"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:background="@null"
                    android:textSize="20sp"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" KG"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>


            </LinearLayout>

            <com.google.android.material.slider.Slider
                android:id="@+id/FuelWeightSlider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:thumbColor="@color/dark_blue"
                app:trackColor="@color/near_black"
                app:thumbStrokeColor="@color/black"
                app:haloColor="@color/white"
                android:padding="20dp"
                android:value="200.0"
                android:valueFrom="0.0"
                android:valueTo="487.4" />

        </LinearLayout>

        <Button
            android:id="@+id/fuelEdtBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수정하기"
            android:backgroundTint="@color/dark_blue"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>


    </LinearLayout>

</layout>